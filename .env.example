# LLM API Keys (choose one or more)
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx

# LLM Model Config
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# System Limits
MAX_TOOL_STEPS=8
MAX_QUERY_ROWS=10000
MAX_UPLOAD_SIZE_MB=50
